{
  "name": "berthcare-monorepo",
  "version": "2.0.0",
  "private": true,
  "description": "BerthCare - Home Care Management Platform",
  "repository": {
    "type": "git",
    "url": "https://github.com/fattyageboy/BerthCare.git"
  },
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "build": "nx run-many -t build",
    "build:affected": "nx affected -t build",
    "lint": "nx run-many -t lint",
    "lint:affected": "nx affected -t lint",
    "lint:fix": "nx run-many -t lint --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,yml,yaml}\"",
    "type-check": "nx run-many -t type-check",
    "type-check:affected": "nx affected -t type-check",
    "test": "nx run-many -t test",
    "test:affected": "nx affected -t test",
    "test:ci": "nx run-many -t test --ci --coverage --maxWorkers=2",
    "test:watch": "nx run-many -t test --watch",
    "graph": "nx graph",
    "affected:graph": "nx affected:graph",
    "clean": "rm -rf node_modules dist coverage .nx/cache",
    "prepare": "husky install || true"
  },
  "devDependencies": {
    "@nx/eslint": "^18.0.4",
    "@nx/eslint-plugin": "^18.0.4",
    "@nx/jest": "^18.0.4",
    "@nx/js": "^18.0.4",
    "@nx/workspace": "^18.0.4",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.6.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "nx": "^18.0.4",
    "prettier": "^3.2.4",
    "tsx": "^4.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "nx": {
    "includedScripts": []
  },
  "dependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "bcrypt": "^6.0.0",
    "jsonwebtoken": "^9.0.2"
  }
}
